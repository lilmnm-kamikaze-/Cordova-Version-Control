{
  "name": "@kamikage/cordova-version-control",
  "version": "1.0.0",
  "description": "Control the versions in your config.xml of your cordova projects",
  "main": "src/cli.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo test",
    "addAll": "git add -A",
    "prepare": "husky install",
    "commit": "cz -S",
    "release": "standard-version",
    "lint": "eslint .",
    "fix": "eslint . --fix"
  },
  "bin": {
    "@kamikage/cdvversioncrtl": "bin/main.js",
    "cdvversioncrtl": "bin/main.js",
    "verctrl": "bin/main.js"
  },
  "keywords": [
    "Cordova",
    "version-control",
    "cli"
  ],
  "author": "Joe 'kami' k.",
  "license": "ISC",
  "files": [
    "src",
    "README.md"
  ],
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "standard-version": "^9.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "esm": "^3.2.25",
    "meow": "^10.1.1",
    "ncp": "^2.0.0",
    "util-promisify": "^2.1.0",
    "xml2js": "^0.4.23"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lilmnm-kamikaze-/Cordova-Version-Control.git"
  },
  "bugs": {
    "url": "https://github.com/lilmnm-kamikaze-/Cordova-Version-Control/issues"
  },
  "homepage": "https://github.com/lilmnm-kamikaze-/Cordova-Version-Control#readme"
}
